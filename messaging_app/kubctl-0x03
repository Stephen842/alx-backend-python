#!/usr/bin/env zsh

set -e

DEPLOYMENT_NAME=django-messaging-blue
SERVICE_NAME=django-messaging-service

echo "Applying updated deployment (rolling update)..."
kubectl apply -f blue_deployment.yaml

echo "Monitoring rollout status..."
kubectl rollout status deployment/$DEPLOYMENT_NAME

echo "Testing app availability with curl..."
for i in {1..10}
do
  curl -s http://localhost || echo "Request failed"
  sleep 2
done

echo "Verifying current pods..."
kubectl get pods -l app=messaging_app

echo "Rolling update completed successfully."
